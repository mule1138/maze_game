{
  "compilerOptions": {
    // "module": "amd",
    "allowJs": true,
    "strict": true,
    "target": "es6",
    "outDir": "app",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "tsx",
    "preserveConstEnums": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./app/*"
  ]
}